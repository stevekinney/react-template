{
  "name": "project-name",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    "bun": "./dist/index.js",
    "node": "./dist/index.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "bun --watch run src/index.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "start": "bun run src/index.ts",
    "start:prod": "bun run dist/index.js",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,mjs,cjs}": [
      "eslint --fix",
      "bun test -- --findRelatedTests"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "zod": "^3.25.17"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
