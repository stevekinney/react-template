{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "./src",
    "outDir": "./dist",

    // Output options
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,

    // Performance improvements for builds
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/tsconfig.build.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/dist/**",
    "**/build/**",
    "**/.bun/**",
    "coverage"
  ]
}
