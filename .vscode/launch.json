{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Bun Script",
      "type": "bun",
      "request": "launch",
      "program": "${workspaceFolder}/src/index.ts",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Debug Tests",
      "type": "bun",
      "request": "launch",
      "program": "test",
      "args": ["--inspect-wait"],
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Current File",
      "type": "bun",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
